{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2022",
    "noImplicitAny": true,
    "target": "es2021",
    "lib": ["DOM", "ES2021"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["src"]
}